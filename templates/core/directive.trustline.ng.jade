.trustline.transaction_source
  .loading_overlay
    .spinner
      .double-bounce1
      .double-bounce2
    span Waiting...
  .amount
    span.balance {{trustline.balance}}&nbsp;
    span.code {{trustline.assetcode}}
    a.issuer(core-address="trustline.issuer")
  div(ng-if="currentAccount._id && currentAccount._id != trustline.issuer")
    .limit(ng-if="trustline.tlimit") Limit: {{trustline.tlimit}}
    .limit(ng-if="trustline.tlimit == 0") Untrusted
    .actions
      button.tx(ng-if="trustline.tlimit" ng-click="trustline.manage({limit: '0'})") Cancel Trust
      button.tx(ng-if="trustline.tlimit == 0" ng-click="trustline.manage({limit: 1})") Create Trust
  div(ng-if="currentAccount._id && currentAccount._id == trustline.issuer")
    .limit(ng-if="trustline.tlimit") Limit: {{trustline.tlimit}}
    | Trusted by 
    a.account(core-address="trustline.accountid")
  div
    button(ng-hide="currentAccount._id") Sign in to Create Trust

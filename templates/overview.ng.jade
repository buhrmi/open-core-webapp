h4 Last 10 Transactions
table(class="table table-striped")
  thead
    tr
      th Success
      th Ledger
      th Source
      th Operations
  tbody
    tr(ng-repeat="transaction in transactions")
      td {{transaction.result.result().result().switch().name}}
      td {{transaction.pg.ledgerseq}}
      td 
        a(core-address="transaction.body.source")
      td
        p(ng-repeat="operation in transaction.body.operations") {{operation}}

h4 Last 10 Ledger Headers
div(ng-repeat="ledgerheader in ledgerheaders")
  p Closetime: {{ledgerheader.closetime}}

h4 Active Peers
div(ng-repeat="peer in peers")
  p Address: {{peer.ip}}:{{peer.port}}
